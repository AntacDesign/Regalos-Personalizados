---
import Layout from '../layouts/Layout.astro';
import Link from '../components/Link.astro';

const meta ={
	title: 'Regalos personalizados',
	description: 'Aquí encontrarás Box de Regalo para tus seres queridos, personalizados con fotos y mensajes especiales. ¡Sorprende a tus seres queridos con un regalo único!',
	image: '/portada.jpeg',
	empresa: 'Scrapnow Memory',
	links: [
		{
			title: 'Regalo para ellas 💐',
		 link:	'https://drive.google.com/file/d/1fpuoTtJBBcpKXaGpsRDloQcG4D1vMQ0N/view?usp=sharing'
		},
		{
			title: 'Regalo para ellos 👔',
			link: ''
		}
	]
			
}

const {title, description, image, empresa, links} = meta;
---

<Layout {title} {description} {image} {empresa} >
	<div class="container m-auto text-center flex flex-col items-center gap-y-6 pt-10 md:pt-10 px-4 md:max-w-xl text-red-950">
		<img src="/logo_scrapnowMemory.svg" alt="logo scrapnow memory" class="size-36 rounded-full">
		<div>
			<h1 class="text-2xl font-medium"> ✨ {title} ✨</h1>
			<p class="mt-1">{description}</p>
		</div>
		{
			links.map(({title,link})=>(
				<Link {link} {title}>
					🎁
				</Link>
			))
		}
	<p class="pt-14 flex flex-col items-center">
		Creando detalles que perduren en el corazón.
		<a href="https://api.whatsapp.com/send/?phone=51982696738&text&type=phone_number&app_absent=0" class="flex mt-2 p-2 rounded-full border-2 border-green-500 text-green-900 w-fit text-xs items-center gap-1">
			Escríbenos por WhatsApp
			<img src="/whatsapp-icon.svg" alt="hablanos por whatsapp" class="size-6">
		</a>
	</p>
	</div>
</Layout>
